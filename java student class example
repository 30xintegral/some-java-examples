public class Student {
    private int rollNumber;
    private String name;
    private int mathMarks;
    private int programmingMarks;
    
    public Student(int rollNumber, String name, int mathMarks, int programmingMarks) {
        this.rollNumber = rollNumber;
        this.name = name;
        this.mathMarks = mathMarks;
        this.programmingMarks = programmingMarks;
    }
    
    public int getRollNumber() {
        return rollNumber;
    }
    
    public void setRollNumber(int rollNumber) {
        this.rollNumber = rollNumber;
    }
    
    public String getName() {
        return name;
    }
    
    public void setName(String name) {
        this.name = name;
    }
    
    public int getMathMarks() {
        return mathMarks;
    }
    
    public void setMathMarks(int mathMarks) {
        this.mathMarks = mathMarks;
    }
    
    public int getProgrammingMarks() {
        return programmingMarks;
    }
    
    public void setProgrammingMarks(int programmingMarks) {
        this.programmingMarks = programmingMarks;
    }
    
    public int getTotalMarks() {
        return mathMarks + programmingMarks;
    }
    
    public boolean hasMajorSubjects() {
        return mathMarks >= 40 && programmingMarks >= 40;
    }
}
